# Environment Variables - Example Configuration
# Copy this file to .env and update with your actual values

# ===========================
# Backend (Flask) Configuration
# ===========================

# Flask environment (development, production, testing)
FLASK_ENV=development

# Secret key for Flask sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-change-in-production

# JWT secret key for token signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Database URL
# Development (SQLite):
DATABASE_URL=sqlite:///fortigate_wizard.db
# Production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/fortigate_wizard

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT token expiration times (in seconds)
JWT_ACCESS_TOKEN_EXPIRES=3600          # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=2592000      # 30 days

# File upload configuration
UPLOAD_FOLDER=/tmp/uploads
MAX_CONTENT_LENGTH=16777216            # 16MB max upload size

# Rate limiting (requests per minute)
RATE_LIMIT_AUTH=5                       # 5 login attempts per minute
RATE_LIMIT_API=100                      # 100 API requests per minute

# Logging
LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=app.log

# Admin user (auto-created on first run)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@graphenenetworks.com
ADMIN_PASSWORD=change-this-password-immediately

# ===========================
# Frontend (React) Configuration
# ===========================

# API base URL
VITE_API_URL=http://localhost:5000

# Application info
VITE_APP_NAME=FortiGate Spartan Wizard
VITE_APP_VERSION=1.0.0
VITE_COMPANY_NAME=Graphene Networks

# Feature flags
VITE_ENABLE_TEMPLATES=true
VITE_ENABLE_SHARING=true
VITE_ENABLE_DOCUMENTATION=true

# ===========================
# Database Configuration
# ===========================

# PostgreSQL (for production)
POSTGRES_USER=fortigate_wizard
POSTGRES_PASSWORD=secure-password-here
POSTGRES_DB=fortigate_wizard
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================
# Email Configuration (optional)
# ===========================

# SMTP settings for email notifications
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@graphenenetworks.com

# ===========================
# Security Configuration
# ===========================

# Password requirements
MIN_PASSWORD_LENGTH=12
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true

# Session security
SESSION_COOKIE_SECURE=true             # Require HTTPS (set to false in dev)
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ===========================
# Backup Configuration
# ===========================

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *              # Daily at 2 AM (cron format)
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups/fortigate-wizard

# ===========================
# Monitoring & Analytics
# ===========================

# Sentry (error tracking)
SENTRY_DSN=

# Google Analytics
GA_TRACKING_ID=

# ===========================
# Development Settings
# ===========================

# Debug mode (never enable in production!)
DEBUG=false

# Flask debug toolbar
DEBUG_TB_ENABLED=false

# SQL query logging
SQLALCHEMY_ECHO=false

# ===========================
# Docker Configuration
# ===========================

# Docker compose settings
COMPOSE_PROJECT_NAME=fortigate-wizard

# Container ports
FRONTEND_PORT=8080
BACKEND_PORT=5000
POSTGRES_PORT=5432

# ===========================
# Notes
# ===========================

# 1. Never commit .env file to version control
# 2. Use strong, unique passwords for production
# 3. Generate new secret keys for each environment
# 4. Keep database credentials secure
# 5. Enable HTTPS in production (SESSION_COOKIE_SECURE=true)
# 6. Regular backup your database
# 7. Monitor logs for security issues
# 8. Update dependencies regularly

# ===========================
# Generate Random Secrets
# ===========================

# Python command to generate secure keys:
# python -c "import secrets; print(secrets.token_hex(32))"

# Or use this in your terminal:
# openssl rand -hex 32
